{
    "name": "@ngageoint/color-js",
    "version": "1.0.0",
    "displayName": "Color Javascript",
    "description": "Color Javascript",
    "keywords": [
        "NGA",
        "Color"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ngageoint/color-js.git"
    },
    "author": {
        "name": "NGA"
    },
    "contributors": [
        {
            "name": "Kevin Gilland",
            "email": "kgilland@caci.com"
        }
    ],
    "homepage": "https://www.nga.mil",
    "engines": {
        "node": ">= 12.4",
        "npm": ">= 6.x"
    },
    "dependencies": {},
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "1.0.2",
        "coveralls": "3.1.1",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    },
    "scripts": {
        "clean": "rm -rf ./.test_run; rm -rf ./.nyc_output; rm -rf ./docs/coverage; npm run clean-dist; npm run clean-test; rm -rf api-docs",
        "clean-dist": "rm -rf ./dist",
        "clean-test": "rm -rf ./test/bundle ./test/node_modules ./test/tmp",
        "test-node": "npm run clean; nyc --no-clean mocha -r ts-node/register",
        "test": "npm run test-node && npm run report",
        "report": "nyc report",
        "build": "npm run clean && tsc",
        "prepare": "npm run build"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "temp-dir": "./.test_run",
        "report-dir": "./docs/coverage",
        "reporter": [
            "lcov"
        ]
    }
}