{
    "name": "@ngageoint/color-js",
    "version": "1.1.0-beta.0",
    "displayName": "Color Javascript",
    "description": "Color Javascript",
    "keywords": [
        "NGA",
        "Color"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ngageoint/color-js.git"
    },
    "author": {
        "name": "NGA"
    },
    "contributors": [
        {
            "name": "Kevin Gilland",
            "email": "kgilland@caci.com"
        }
    ],
    "homepage": "https://www.nga.mil",
    "engines": {
        "npm": ">= 8.x"
    },
    "license": "MIT",
    "main": "./index.js",
    "typings": "./index.d.ts",
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/mocha": "9.1.1",
        "@types/node": "^14.6.3",
        "chai": "4.3.6",
        "coveralls": "3.1.1",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    },
    "dependencies": {
    },
    "scripts": {
        "clean": "ts-node build/clean; rm -rf .test_run",
        "test:run": "mocha --config .mocharc.js",
        "test": "npm run build && npm run test:run",
        "compile": "tsc",
        "dev": "tsc --watch",
        "dev:ts": "tsc --watch --noEmit --module esnext",
        "build": "npm run clean && npm run module && npm run compile",
        "module": "tsc --noEmit --module amd && tsc --noEmit --module system && tsc --noEmit --module umd && tsc --noEmit --module esnext",
        "package": "npm run build && ts-node build/dist && cd dist && npm publish",
        "report": "nyc report",
        "coverage": "nyc npm run test:run",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "tslint -p tsconfig.json"
    },
    "files": [
        "dist"
    ],
    "nyc": {
        "temp-dir": "./.test_run",
        "report-dir": "./docs/coverage",
        "reporter": [
            "lcov"
        ]
    }
}
